        <PackageReference Include="Serilog.Sinks.Console" Version="5.0.0" />
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\SparkplugNet\SparkplugNet.csproj" />
    </ItemGroup>

</Project>
